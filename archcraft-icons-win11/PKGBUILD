# Maintainer: Aditya Shakya <adi1090x@gmail.com>

pkgname=archcraft-icons-win11
pkgver=1.0
pkgrel=1
pkgdesc="Win11 Icon theme for Archcraft"
url="https://github.com/archcraft-os/archcraft-icons"
arch=('any')
license=('GPL3')
makedepends=()
depends=()
conflicts=()
groups=(archcraft-icons)
provides=("${pkgname}")
options=(!strip !emptydirs)

prepare() {
	cp -af ../files/. ${srcdir}
}

package() {
	local _iconsdir=${pkgdir}/usr/share/icons
	mkdir -p "$_iconsdir"
	cp -r ${srcdir}/* "$_iconsdir"
}
